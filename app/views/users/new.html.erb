<% provide(:title, t('.signup')) %>
<h1><%= t(".signup") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    	<%= render 'fields', f: f %>
      <p><%= f.submit t("button.create_account"), class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
</div>