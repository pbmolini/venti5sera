<% provide(:title, t('.title')) %>
<h1><%= t('.head') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, html: { multipart: true } do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t("button.save_changes"), class: "btn btn-large btn-primary" %>
    <% end %>


		<%# avatar_for @user, :thumb %>
		<%# if @user.avatar? %>
		<%#= link_to raw(t('.delete_avatar_html')), { :controller => "users", :action => "remove_avatar" } %>
		<%# else %>
    <%#= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target="_blank"><%= icon('edit') %> <%= t('.edit_gravatar') %></a>
    <%# end %>
  </div>
</div>
