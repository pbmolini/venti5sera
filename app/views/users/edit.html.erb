<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, html: { multipart: true } do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>


		<%= avatar_for @user, :thumb %>
		<% if @user.avatar? %>
		<%= link_to raw('<i class="icon-trash"></i> remove'), { :controller => "users", :action => "remove_avatar" } %>
		<% else %>
    <%#= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target="_blank"><i class="icon-edit"></i> edit on gravatar</a>
    <% end %>
  </div>
</div>