<li>
	<%#= gravatar_for user, size: 52 %>
	<%= avatar_for user, :thumb %>
	<%= link_to user.name, user %>
	<% if current_user && current_user.admin? && !current_user?(user) %>
    | <%= link_to (raw '<i class="icon-trash"></i>'), user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>