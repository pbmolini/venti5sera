<li>
	<%#= gravatar_for user, size: 52 %>
	<%= avatar_for user, :thumb %>
	<%= link_to user.name, user %>
	<% if current_user && current_user.admin? && !current_user?(user) %>
    | <%= link_to (raw t('.delete_html')), user, method: :delete,
                                  data: { confirm: t(:are_you_sure) } %>
    | <%= link_to (raw t('.edit_html')), edit_user_path(user) %>
  <% end %>
	<br>
	<small>"<%= user.category %>"</small>
  <span class="subtext">
  	<%= t("shared.user_info.desire", count: user.current_desires.count) %>
  </span>
</li>
