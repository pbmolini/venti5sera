<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name %>

<% if !current_user %>
<%= f.label :email %>
<%= f.email_field :email %>
<% end %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>

<% if current_user %>
<%= f.label :avatar %>
<%= f.file_field :avatar %>
<br>
<% end %>