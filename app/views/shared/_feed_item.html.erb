<li id="<%= feed_item.id %>">
  <%#= link_to gravatar_for(feed_item.user), feed_item.user %>
  <%= link_to avatar_for(feed_item.user, :thumb), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= raw(link_generator(feed_item.content)) %></span>
  <span class="timestamp">
    <% if (feed_item.updated_at > feed_item.created_at) %>
  	<%= t('.updated') %> <%= time_ago_in_words(feed_item.updated_at) %> <%= t('.ago') %>.
  	<% else %>
    <%= t('.created') %> <%= time_ago_in_words(feed_item.updated_at) %> <%= t('.ago') %>.
    <% end %>
  </span>
   <%= render 'shared/delete_desire_link', desire: feed_item %> | 
   <%= render 'shared/edit_desire_link', desire: feed_item %>
</li>