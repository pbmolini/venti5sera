<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "venti5sera", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to t(".home"),    root_path %></li>
					<li><%= link_to t(".help"),    help_path %></li>
          <li><%= link_to t(".users"), users_path %></li>
          <% if current_user %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <%#= avatar_for(current_user, :small) %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".my_desires"), current_user %></li>
              <li><%= link_to t(".profile"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".sign_out"), signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t(".sign_in"), signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>