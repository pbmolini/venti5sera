<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "venti5sera", root_path, id: "logo" %>
       <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse navbar-responsive-collapse collapse">
        <% if current_user %>
        <%= render 'layouts/search' %>
        <% end %>
        <nav>
          <ul class="nav pull-right">
            <li><%= link_to raw("#{icon('home')} #{t('.home')}"), root_path %></li>
            <li><%= link_to raw("#{icon('list')} #{t('.users')}"), users_path %></li>
						<li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('.categories') %> <%= icon('caret-down') %>
              </a>
              <ul class="dropdown-menu">
								<% Category.all.each do |category| %>
                <li><%= link_to raw("#{icon(category.icon)} #{category.name}"), categories_path(anchor: category.name) %></li>
								<% end %>
              </ul>
            </li>
            <li><%= link_to raw("#{icon('question-circle')} #{t('.help')}"), help_path %></li>
            <% if current_user %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <%= icon('caret-down') %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to raw("#{icon('gift')} #{t('.my_desires')}"), current_user %></li>
                <li><%= link_to raw("#{icon('user')} #{t('.profile')}"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to raw("#{icon('sign-out')} #{t('.sign_out')}"), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to raw("#{icon('sign-in')} #{t('.sign_in')}"), signin_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
