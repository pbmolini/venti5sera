<% provide(:title, t('.title')) %>
<h1><%= t('.head') %></h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag password_resets_path do |f| %>
		<%#= render 'shared/error_messages', object: f.object %>
		<%= label_tag (raw t('.message_html')) %>
		<%= text_field_tag :email, nil, placeholder: "user@example.com" %>

		<%= submit_tag t('button.reset_password'), class: "btn btn-large btn-info" %>
		<% end %>		

	</div>
</div>