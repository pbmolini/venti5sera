$(document).ready () ->
	$('#follow_form_container').on 'click', "#btn-unfollow", () ->
		$(@).val('<%= I18n.t("button.unfollowing") %>')
	.on 'click', "#btn-follow", () ->
		$(@).val('<%= I18n.t("button.following") %>')